<?xml version="1.0" encoding="UTF-8"?>
<profilesXml xmlns="http://maven.apache.org/PROFILES/1.0.0"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://maven.apache.org/PROFILES/1.0.0 http://maven.apache.org/xsd/profiles-1.0.0.xsd">
    <profiles>
        <profile>
            <id>mysql</id>
            <properties>
                <hibernate.dialect>org.hibernate.dialect.MySQLDialect</hibernate.dialect>
                <hibernate.connection.driver_class>com.mysql.cj.jdbc.Driver</hibernate.connection.driver_class>
                <hibernate.connection.url>![<![CDATA[jdbc:mysql://localhost:3306/quizowanie?useUnicode=true&useJDBCCompliantTimezoneShift=true&useLegacyDatetimeCode=false&serverTimezone=UTC]]></hibernate.connection.url>
                <hibernate.connection.username>root</hibernate.connection.username>
                <hibernate.connection.password></hibernate.connection.password>
            </properties>
        </profile>
        <profile>
            <id>postgres</id>
            <properties>
                <hibernate.dialect>org.hibernate.dialect.PostgreSQL94Dialect</hibernate.dialect>
                <hibernate.connection.driver_class>org.postgresql.Driver</hibernate.connection.driver_class>
                <hibernate.connection.url>jdbc:postgresql://localhost:5432/quizowanie</hibernate.connection.url>
                <hibernate.connection.username>postgres</hibernate.connection.username>
                <hibernate.connection.password>postgres</hibernate.connection.password>
            </properties>
        </profile>
    </profiles>
</profilesXml>